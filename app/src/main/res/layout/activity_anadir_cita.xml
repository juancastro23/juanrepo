<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado con Ã­cono de cita -->
        <ImageView
            android:id="@+id/iconoCita"
            android:layout_width="63dp"
            android:layout_height="46dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Icono Nueva Cita"
            android:src="@drawable/ic_servicio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva cita"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#222"
            android:layout_marginBottom="24dp" />

        <!-- Campos del formulario -->
        <EditText
            android:id="@+id/inputCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del cliente"
            android:backgroundTint="#333" />

        <EditText
            android:id="@+id/inputServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Servicio"
            android:layout_marginTop="12dp"
            android:backgroundTint="#333" />

        <EditText
            android:id="@+id/inputFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha (DD/MM/AAAA)"
            android:layout_marginTop="12dp"
            android:backgroundTint="#333" />

        <EditText
            android:id="@+id/inputHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora (HH:MM)"
            android:layout_marginTop="12dp"
            android:backgroundTint="#333" />

        <EditText
            android:id="@+id/inputNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notas (opcional)"
            android:layout_marginTop="12dp"
            android:backgroundTint="#333" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cita"
            android:layout_marginTop="24dp"
            android:backgroundTint="#111111"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
