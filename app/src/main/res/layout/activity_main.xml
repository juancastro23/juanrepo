<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Texto de bienvenida -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido a su perfil"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Contenedor superior para centrar la imagen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="357dp"
            android:layout_height="342dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/estlista" />
    </LinearLayout>

    <!-- Contenedor inferior para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/btnAnadirCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir cita"/>

        <Button
            android:id="@+id/btnVerCitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver citas"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</LinearLayout>
